<h1>Settings#index</h1>

<p> Payment Methods </p>
<table>
	<tr>
    	<td>  ID   </td>
   	 	<td>  Payment Method ID  </td>
   	 	<td>  Payment Account ID  </td>
   	 	<td>  Code   </td>
   	 	<td>  Payment fee percentage   </td>
   	 	<td>  Payment Fee Fixed </td>
    </tr>
<% @payment_methods.each do |payment_method|  %>
	
	<tr>
    	<td>  <%= payment_method["id"] %>   </td>
   	 	<td>   <%= payment_method["payment_type_id"] %>   </td>
   	 	<td>  <%= payment_method["payment_account_id"] %>   </td>
   	 	<td> <%= payment_method["payment_fee_percentage"] %>   </td>
   	 	<td> <%= payment_method["payment_fee_fixed"] %>   </td>
    </tr>
<% end %>
</table>
<p><%= link_to 'Add Payment method', new_setting_payment_method_path %></p>